<p id="notice"><%= notice %></p>

<h1>Listing Locals</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Logradouro</th>
      <th>Bairro</th>
      <th>Tipo</th>
      <th>Animacao</th>
      <th>Interacao</th>
      <th>Faixaetaria</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Imagem</th>
      <th>Nota</th>
      <th>Cod linha</th>
      <th>Preco</th>
      <th>Telefone</th>
      <th>Site</th>
      <th>Horario abre</th>
      <th>Horario fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locals.each do |local| %>
      <tr>
        <td><%= local.nome %></td>
        <td><%= local.descricao %></td>
        <td><%= local.logradouro %></td>
        <td><%= local.bairro %></td>
        <td><%= local.tipo %></td>
        <td><%= local.animacao %></td>
        <td><%= local.interacao %></td>
        <td><%= local.faixaEtaria %></td>
        <td><%= local.longitude %></td>
        <td><%= local.latitude %></td>
        <td><%= local.imagem %></td>
        <td><%= local.nota %></td>
        <td><%= local.cod_linha %></td>
        <td><%= local.preco %></td>
        <td><%= local.telefone %></td>
        <td><%= local.site %></td>
        <td><%= local.horario_abre %></td>
        <td><%= local.horario_fecha %></td>
        <td><%= link_to 'Show', local %></td>
        <td><%= link_to 'Edit', edit_local_path(local) %></td>
        <td><%= link_to 'Destroy', local, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

